# MongoDB Configuration
# Note: Password with @ symbol must be URL-encoded as %40
MONGO_URI=YourMongoURI
DB_NAME=portfolio_db

# GitHub Configuration
GITHUB_USERNAME=Your_GitHUb_Name

# GitHub Token (Optional but recommended for higher rate limits)
GITHUB_TOKEN=your_github_token_here

# Medium Configuration
# Your Medium username (without @ symbol)
# Example: If your Medium URL is https://medium.com/@joshuawhoban, use: joshuawhoban
MEDIUM_USERNAME=your_medium_username

# Server Configuration
PORT=5000

# Frontend URL (for CORS - set in production)
FRONTEND_URL=http://localhost:3000